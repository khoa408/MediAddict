<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= entry.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/entry/<%=entry._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" value="<%= entry.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" value="<%= entry.image %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" value="<%= entry.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/entry">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

