<% include ../partials/header %>

<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.js"></script>
<script src="/scripts/search.js" async defer></script>

<header class="jumbotron" style="padding:1rem">
	<div class="container">
		<h1> Welcome To Mediaddict!</h1>
		<p>Recommend movies, shows, books, music and games across differnt media</p>
		<p>
			<a class="btn btn-primary btn-lg" href="/new-entry"><i class="fas fa-file mr-3"></i>Add New Entry </a>
		</p>
		<p>
			<form action="/search" method="GET" class="form-inline" id="entry-search">
				<div class="form-group" style="min-width:100%">
					<input type="text" name="name" placeholder="Entry search..." class="form-control" style="min-width:100%">
				</div>

			</form>

		</p>
	</div>
</header>
<div class="container">
	<div class="row text-center flex-wrap" id="entry-grid">
		<% entries.forEach(function(entry){ %>
			<div class="col-md-2 col-sm-3">
				<div class="thumbnail">
					<% if (typeof entry.image !== 'undefined') { %>
						<a href="/entry/<%= entry._id %>"> <img class="poster-showcase" src="<%= entry.image %>"> </a>
						<% } %>
				</div>
			</div>
		<%}); %>
	</div>
</div>


<style>
.poster-showcase {
	box-shadow: 0px 0px 10px 0px grey;
	border-style: solid;
	border-color: white;
}

.poster-showcase:hover {

	box-shadow: 0px 0px 10px 0px black;
}
</style>



<% include ../partials/footer %>